.card
  - if @stops
    %h4 Nearby bus stops
    %ul
      - @stops.each do |stop|
        %li= "Bus Stop: #{stop['Name']} (#{stop['StopID']})"
= form_for @dashboard do |f|
  - if @dashboard.errors.any?
    #error_explanation
      %h3
        = pluralize(@dashboard.errors.count, "error")
        prohibited this dashboard from being saved:
      %ul
        - @dashboard.errors.full_messages.each do |msg|
          %li= msg
  = f.label :title
  = f.text_field :title
  = f.label :address
  = f.text_field :address
  = f.label :desc
  = f.text_field :desc
  = f.label :public
  = f.check_box :public
  = f.label :lat
  = f.text_field :lat, class: 'lat'
  = f.label :lon
  = f.text_field :lon, class: 'lon'
  = f.label :stop_id_str
  = f.text_field :stop_id_str
  = f.submit
