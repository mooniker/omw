- if @my_dashboards
  %h2 Your Dashboards
  %table
    %thead
      %tr
        %th Name
        %th{colspan: 2}
    %tbody
      - @my_dashboards.each do |d|
        %tr
          %td= link_to d.title, d
          %td= link_to 'edit', edit_dashboard_path(d)
          %td= link_to 'delete', dashboard_path(d), method: :delete, data: { confirm: 'Are you sure?' }
