%h2= @dashboard.title
%p= @dashboard.desc
%p= @dashboard.stop_id_str
-# = @predictions.inspect
- @predictions.each do |stop|
  .bus_stop_card
    %h3= "Stop Name: #{stop['StopName']}"
    %table
      %thead
        %tr
          %th Minutes
          %th RouteID
          %th DirectionText
          -# %th DirectionNum
          %th VehicleID
          %th TripID
      %tbody
        - stop['Predictions'].each do |p|
          %tr
            %td= p['Minutes']
            %td= p['RouteID']
            %td= p['DirectionText']
            -# %td= p['DirectionNum']
            %td= p['VehicleID']
            %td= p['TripID']
